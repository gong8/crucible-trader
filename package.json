{
  "name": "crucible-trader",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "concurrently \"pnpm --filter @crucible-trader/api dev\" \"pnpm --filter @crucible-trader/backtest-worker dev\" \"pnpm --filter @crucible-trader/web dev\"",
    "build": "pnpm -r build",
    "test": "node ops/scripts/test-with-summary.mjs",
    "test:raw": "pnpm -r test",
    "test:packages": "pnpm --filter './packages/**' test",
    "test:services": "pnpm --filter './services/**' test",
    "test:verbose": "pnpm -r test 2>&1 | tee test-output.log",
    "lint": "pnpm run lint:ensure-no-ts-ignore && eslint \"./apps/**/*.{ts,tsx}\" \"./services/**/*.{ts,tsx}\" \"./packages/**/*.{ts,tsx}\"",
    "lint:ensure-no-ts-ignore": "node ops/scripts/check-no-ts-ignore.mjs",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "fastify": "^5.6.1",
    "lightweight-charts": "^5.0.9",
    "next": "14.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
